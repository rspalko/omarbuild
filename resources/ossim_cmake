cmake . -G "Unix Makefiles"\
 -DCMAKE_BUILD_TYPE=Debug \
 -DCMAKE_FRAMEWORK_PATH=${INSTALL_LOCATION}/Frameworks \
 -DCMAKE_INSTALL_PREFIX=${INSTALL_LOCATION} \
 -DCMAKE_PREFIX_PATH=${BUILD_LOCATION} \
 -DBUILD_GEOPDF_PLUGIN=OFF\
 -DBUILD_OSSIM_VIDEO=ON\
 -DBUILD_OSSIM_PLUGIN=ON\
 -DBUILD_CSMAPI=OFF \
 -DBUILD_WMS=ON \
 -DBUILD_OSSIMCSM_PLUGIN=OFF\
 -DBUILD_PDAL_PLUGIN=OFF\
 -DBUILD_OSSIMGDAL_PLUGIN=ON\
 -DBUILD_MRSID_PLUGIN=ON\
 -DMRSID_RASTER_INCLUDE_DIR=${DEPENDENCY_BUILD_LOCATION}/mrsid/${MRSID_DIRNAME}/Raster_DSDK/include\
 -DMRSID_LIDAR_INCLUDE_DIR=${DEPENDENCY_BUILD_LOCATION}/mrsid/${MRSID_DIRNAME}/Lidar_DSDK/include\
 -DMRSID_RASTER_DSDK_LIBRARY=${INSTALL_LOCATION}/lib/libltidsdk.so\
 -DMRSID_LIDAR_DSDK_LIBRARY=${INSTALL_LOCATION}/lib/liblti_lidar_dsdk.so\
 -DBUILD_KAKADU_PLUGIN=ON\
 -DKAKADU_ROOT_SRC=${DEPENDENCY_BUILD_LOCATION}/kakadu/${KAKADU_DIRNAME}\
 -DKAKADU_AUX_LIBRARY=${DEPENDENCY_BUILD_LOCATION}/kakadu/${KAKADU_DIRNAME}/lib/${KAKADU_ARCHITECTURE}/libkdu_aux.a\
 -DKAKADU_LIBRARY=${DEPENDENCY_BUILD_LOCATION}/kakadu/${KAKADU_DIRNAME}/lib/${KAKADU_ARCHITECTURE}/libkdu_a78R.so\
 -DBUILD_OSSIM_MPI_SUPPORT=ON\
 -DMPI_INCLUDE_PATH=${INSTALL_LOCATION}/include \
 -DMPI_LIBRARIES=${INSTALL_LOCATION}/lib \
 -DBUILD_OSSIMPNG_PLUGIN=ON\
 -DBUILD_OPENJPEG_PLUGIN=ON\
 -DBUILD_OSSIM_FRAMEWORKS=OFF\
 -DBUILD_SHARED_LIBS=ON \
 -DBUILD_OSSIM_PLANET=OFF \
 -DBUILD_OSSIMPLANETQT=OFF \
 -DBUILD_OSSIM_QT=OFF \
 -DBUILD_OSSIM_QT4=OFF \
 -DBUILD_OSSIM_GUI=OFF \
 -DBUILD_OSSIM_CURL_APPS=ON \
 -DBUILD_OSSIM_PACKAGES=OFF \
 -DOSSIM_BUILD_DOXYGEN=OFF

