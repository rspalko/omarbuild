#GEOTIFF_URL=ftp://ftp.remotesensing.org/pub/geotiff/libgeotiff/libgeotiff-1.4.1.tar.gz
GEOTIFF_URL=http://download.osgeo.org/geotiff/libgeotiff/libgeotiff-1.4.2.tar.gz
